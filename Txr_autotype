-- SETTINGS
local blacklist = { "badword1", "badword2" }
local usedWords = {}
local dictionary = {"apple","banana","cat","dog"} -- 400k words will be loaded here (optimized)

-- HELPER FUNCTION
local function pickWord()
    for i = 1, #dictionary do
        local word = dictionary[i]
        if not usedWords[word] and not table.find(blacklist, word) then
            usedWords[word] = true
            return word
        end
    end
    return nil
end

-- AUTO TYPE LOOP
task.spawn(function()
    while true do
        task.wait(1)
        for _, v in pairs(game:GetDescendants()) do
            if v:IsA("TextBox") and v.Visible and v.TextEditable then
                local word = pickWord()
                if word then
                    v.Text = word
                end
            end
        end
    end
end)
